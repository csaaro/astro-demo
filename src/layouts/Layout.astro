---
import { pwaInfo } from 'virtual:pwa-info';
const { title } = Astro.props; // Titel dynamisch übergeben
import "../assets/styles/global.css"
import "../assets/styles/detail.css"; // Glo
import Footer from '../components/Footer.astro';

const {BASE_URL} = import.meta.env;
const isHomePage = Astro.url.pathname === `${BASE_URL}/`
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <link rel="apple-touch-icon" href="/pwa-192x192.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <base href={BASE_URL} />
    <title><slot name="title" /></title>
    { pwaInfo && <Fragment set:html={pwaInfo.webManifest.linkTag} /> }
    <script src="/src/pwa.ts"></script>
  </head>
  <body>
    <header class="header">
      <nav class="navigation">
        {!isHomePage && <a href={`${BASE_URL}`}  class="nav-link">Hauptseite</a>}
        <slot name="extra-links"></slot> <!-- Zusätzliche Links -->
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>