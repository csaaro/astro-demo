<footer id="installFooter">
    <style>
      footer {
        position: fixed;
        bottom: 15px; /* Positionierung für Smartphone */
        left: 50%; /* Zentriert horizontal */
        transform: translateX(-50%); /* Zentrierung ausgleichen */
        background-color: #red;
        color: red;
        text-align: center;
        padding: 10px 20px;
        border-radius: 8px; /* Abgerundete Ecken */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        display: flex;
        justify-content: center;
        align-items: center;
      }
  
      button {
        width: 100%; /* Button füllt den Footer aus */
        max-width: 300px; /* Maximale Breite */
        font-size: 16px; /* Optimale Schriftgröße */
        font-weight: bold; /* Fettgedruckt für bessere Sichtbarkeit */
        color: white;
        background-color:red;
        border: none;
        border-radius: 5px;
        padding: 10px 15px; /* Mehr Platz im Button */
        cursor: pointer;
        text-transform: uppercase; /* Text in Großbuchstaben */
        transition: background-color 0.3s ease;
      }
  
      button:hover {
        background-color: darkred;
      }
  
      button:disabled {
        background-color: #ccc;
        cursor: not-allowed;
      }
  
      footer.hidden {
        display: none; /* Footer ausblenden */
      }
    </style>
  
    <button id="installBtn">App installieren</button>
  
    <script>
      interface BeforeInstallPromptEvent extends Event {
        prompt: () => Promise<void>;
        userChoice: Promise<{ outcome: 'accepted' | 'dismissed' }>;
      }
  
      let deferredPrompt: BeforeInstallPromptEvent | null = null;
  
      const footer = document.getElementById('installFooter') as HTMLElement;
      const installBtn = document.getElementById('installBtn') as HTMLButtonElement;
  
      // Auf das `beforeinstallprompt`-Event hören
      window.addEventListener('beforeinstallprompt', (e: Event) => {
        e.preventDefault(); // Standardaufforderung unterdrücken
        deferredPrompt = e as BeforeInstallPromptEvent;
  
        footer.classList.remove('hidden'); // Footer anzeigen
  
        installBtn.addEventListener('click', async () => {
          if (!deferredPrompt) return;
  
          // Installationsaufforderung anzeigen
          await deferredPrompt.prompt();
  
          const { outcome } = await deferredPrompt.userChoice;
          if (outcome === 'accepted') {
            console.log('App wurde installiert.');
          } else {
            console.log('App-Installation abgelehnt.');
          }
  
          deferredPrompt = null;
          footer.classList.add('hidden'); // Footer ausblenden
        });
      });
  
      // Nach Installation ausblenden
      window.addEventListener('appinstalled', () => {
        console.log('App erfolgreich installiert.');
        footer.classList.add('hidden'); // Footer ausblenden
      });
    </script>
  </footer>