---
import Layout from "../layouts/Layout.astro"; // Layout einbinden
const categories = [
  { id: 1, name: "Kategorie 1", description: "Beschreibung zu Kategorie 1" },
  { id: 2, name: "Kategorie 2", description: "Beschreibung zu Kategorie 2" },
  { id: 3, name: "Kategorie 3", description: "Beschreibung zu Kategorie 3" },
];
const BASE_URL = import.meta.env.BASE_URL;
---

<Layout title="Hauptseite - Kategorien">
  <main class="container">
    <h1 class="title">WÃ¤hle eine Kategorie</h1>
    <div class="box-grid">
      {categories.map((category) => (
        <a href={`${BASE_URL}/category/${category.id}`} class="box">
          <div class="box-content">
            <h2>{category.name}</h2>
            <p>{category.description}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>